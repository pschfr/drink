header
	nav.navbar.navbar-default.navbar-fixed-top
		.container-fluid
			.row
				if title != 'Drinking Games'
					.col-xs-10
						if streamURL
							h1
								a(href="#{streamURL}" target="_blank")= title
						else
							h1(title="No streaming link available.")= title
					.col-xs-2.text-right
						h1#total 0
				else
					.col-xs-12
						h1= title
